IF
  Global("Prep","LOCALS",0)
  OR(3)
    See(ThirdNearestEnemyOf([PC]))
    See(SecondNearestEnemyOf([PC]))
    See(NearestEnemyOf([PC]))
THEN
    RESPONSE #100
        ForceSpell(LastSeenBy(Myself),WIZARD_DISPEL_MAGIC)
        SetGlobal("Prep","LOCALS",1)
END

